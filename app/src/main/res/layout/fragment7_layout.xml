        android:layout_height="wrap_content"
        android:text="@string/yes"
        android:id="@+id/submit_data_button"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

